{
  "name": "@bgd-labs/rpc-env",
  "version": "1.0.1",
  "private": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "format": "biome check --write",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "src/lib.ts",
    "dist/lib.d.mts",
    "dist/lib.d.ts",
    "dist/lib.js",
    "dist/lib.mjs"
  ],
  "main": "./dist/lib.js",
  "module": "./dist/lib.mjs",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/lib.d.mts",
        "default": "./dist/lib.js"
      },
      "import": {
        "types": "./dist/lib.d.mts",
        "default": "./dist/lib.mjs"
      }
    }
  },
  "author": "Jonas Strassel <jonas@bdglabs.com>",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@biomejs/biome": "^1.9.3",
    "@types/node": "^22.7.5",
    "lefthook": "^1.7.18",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "viem": "^2.21.28",
    "vitest": "^2.1.3"
  },
  "tsup": {
    "entry": [
      "src/action.ts",
      "src/lib.ts"
    ],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "dts": true,
    "format": [
      "esm",
      "cjs"
    ]
  }
}
